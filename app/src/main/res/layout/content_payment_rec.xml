<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_payment_rec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tal.yudale.payment_rec"
    tools:showIn="@layout/activity_payment_rec">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:contentScrim="?attr/colorPrimary">

        </android.support.design.widget.CollapsingToolbarLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#98d1fe">

            <ImageView
                android:id="@+id/app_bar_image"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:src="@drawable/yudale"
                android:scaleType="fitStart"
                android:layout_width="70dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.04" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Yudale"
                tools:text="Yuda'le"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_weight="0.27"
                android:textColor="#000000" />

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="From"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/user_sent"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView17"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                <TextView
                    android:text="Request Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/req_date"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                <TextView
                    android:text="Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount_req"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                <TextView
                    android:text="notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rec_notes"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="68dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/deny"
                android:id="@+id/deny"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/confirm"
                android:id="@+id/confirm"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
